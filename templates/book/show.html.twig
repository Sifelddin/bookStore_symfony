{% extends 'admin.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ book.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ book.title }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ book.slug }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ book.price }}</td>
			</tr>
			<tr>
				<th>Photo</th>
				<td>{{ book.photo }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ book.description }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ book.stock }}</td>
			</tr>
			<tr>
				<th>StockAlert</th>
				<td>{{ book.stockAlert }}</td>
			</tr>
			<tr>
				<th>ReleaseDate</th>
				<td>{{ book.releaseDate ? book.releaseDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Published</th>
				<td>{{ book.published ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_book_index') }}">back to list</a>

	<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

	{{ include('book/_delete_form.html.twig') }}
{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('build/app.css') }}">
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
	
		<main class="w-10/12 mx-auto bg-white h-screen " >
		<div class="w-10/12 border-solid mx-auto border p-5 ">
				<header class="p-5"> 
					<div class='flex justify-between items-center' >
					<img class="h-40 w-auto rounded-full " src="{{ asset('build/images/book-logo2.jpg') }}" alt="logo img">
					<div class="w-1/3">
							<h1 class="text-4xl">Command : {{order.id}} </h1>
							<h2 class="text-4xl">Date :{{order.orderDate.format('d/m/Y') }}</h2>
					</div>
					</div>
				  </header>
				  <div id="client infos" class="border-solid border p-5 ">
				  		<ul class="text-xl capitalize">
						  <li>Client Numr√©ro : {{app.user.id}} </li>
						  <li>Nom : {{app.user.firstName}} {{app.user.lastName}}</li>
						  <li>Adresse : {{ app.user.address }} {{ app.user.city }} {{ app.user.zipCode }}</li>
						  <li>Contact : {{ app.user.phone}} </li>
						  </ul>
				  </div>
				  <div class="grid grid-cols-2 gap-4 mt-4 ">
						<div id="livraison" class="border-solid border p-5">
							<h2 class="text-2xl capitalize">Adresse de livraison : <p class="text-xl text-gray-700 capitalize"> {{order.shipAddress}} {{order.shipCity}} {{order.shipZipCode}} </p></h2>
						</div>
						<div id="facturation" class="border-solid border p-5"><h2 class="text-2xl capitalize">Adresse de livraison : <p class="capitalize text-gray-700 text-xl"> {{order.billAddress}} {{order.billCity}} {{order.billZipCode}}</p></h2></div>
					</div>
				  <div id="order description mt-5">
				  	<span class="text-lg capitalize">Description de la commande</span>
				  </div>
			</div>

		</main>

		</body>
	</html>

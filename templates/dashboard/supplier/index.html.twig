{% extends 'admin.html.twig' %}

{% block title %}
    Supplier index
{% endblock title %}

{% block body %}
    <div class="py-12 col-span-4 self-center">
        <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
            <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
                <div class="p-6 bg-white border-b border-gray-200">
                    <a class="flex justify-center items-center px-2 py-2 bg-blue-700 border border-transparent rounded-md font-semibold text-sm text-white uppercase tracking-widest hover:bg-blue-600 active:bg-blue-700 focus:outline-none focus:border-gray-100 focus:ring ring-gray-100 disabled:opacity-25 transition ease-in-out duration-150 w-fit"
                        href="{{ path('app_supplier_new') }}">
                        Create new Supplier
                    </a>
                </div>
            </div>
            <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
                <div class="flex flex-col">
                    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th scope="col"
                                                class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Id
                                            </th>
                                            <th scope="col"
                                                class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                ContactName
                                            </th>
                                            <th scope="col"
                                                class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for supplier in suppliers %}
                                            <tr>
                                                <td class="px-2 py-2">
                                                    {{ supplier.id }}
                                                </td>
                                                <td class="px-2 py-2">
                                                    {{ supplier.contactName }}
                                                </td>
                                                <td class="flex justify-around px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                    <a class="text-indigo-600 hover:text-indigo-900 uppercase"
                                                        href="{{
                                                        path(
                                                            'app_supplier_edit',
                                                            {
                                                                id: supplier.id
                                                            }
                                                        )
                                                        }}">
                                                        edit
                                                    </a>
                                                    {{
                                                        include(
                                                            'dashboard/supplier/_delete_form.html.twig'
                                                        )
                                                    }}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="3">
                                                    no records found
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% extends "base.html.twig" %}

{% block body %}
	<div class=" h-screen w-full flex justify-center items-center">
		<div class=" w-3/5 p-3 bg-white rounded-md shadow-md">
			{{ form_start(form) }}
			{{form_errors(form)}}
			<div class="mx-auto grid grid-cols-2 gap-2 items-center">
				<div class='mr-10 col-span-1 '>
					<p class="flex justify-center items-center ">Adresse de livraison</p>
					<div class="border-double border-8 px-10 pb-5">
						{{ form_row(form.ShipAddress, {
							attr: { value: order.ShipAddress ? order.ShipAddress : app.user.address } 
						})}}

						{{ form_row(form.shipCity, {
							attr: { value: order.shipCity ? order.shipCity : app.user.city } 
						})}}
						{{ form_row(form.shipZipCode, {
							attr: { value: order.shipZipCode ? order.shipZipCode : app.user.zipCode }
						})}}
					</div>

				</div>
				<div class='col-span-1'>
					<p class=" flex justify-center items-center" >Adresse de facturation</p>
					<div class="border-double border-8 px-10 pb-5">
						{{ form_row(form.billAddress, {
							attr: { value: order.billAddress ? order.billAddress : app.user.address } 
						})}}
						{{ form_row(form.billCity, {
							attr: { value: order.billCity ? order.billCity : app.user.city } 
						})}}
						{{ form_row(form.billZipCode, {
                    		attr: { value: order.billZipCode ? order.billZipCode : app.user.zipCode }
                		})}}
					</div>
				</div>
				{% if app.user.private == 1 %}
					{{ form_row(form.payMethod) }}
				{% else %}
						<div class="hidden">{{ form_row(form.payMethod) }}</div>
				{% endif %}

			</div>
					<button class='inline-flex justify-center items-center px-4 py-2 mt-4 bg-green-800 border border-transparent rounded-md font-semibold text-sm text-white uppercase tracking-widest hover:bg-green-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300 disabled:opacity-25 transition ease-in-out duration-150'>Comfirm</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

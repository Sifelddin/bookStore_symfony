{% extends "base.html.twig" %}

{% block body %}
	<div class=" h-screen w-full flex justify-center items-center">
		<div class=" w-3/5 p-3 bg-white rounded-md shadow-md">
			{{ form_start(form) }}
			<div class="mx-auto grid grid-cols-2 gap-2 items-center">
				<div class='mr-10 col-span-1 '>
					<p class="flex justify-center items-center ">Adresse de livraison</p>
					<div class="border-double border-8 px-10 pb-5">
					{{ form_row(form.ShipAddress, {
                    	attr: { value: user.address }
                	})}}

					{{ form_row(form.shipCity, {
                    	attr: { value: user.city }
                	})}}
					{{ form_row(form.shipZipCode) }}
					</div>

				</div>
				<div class='col-span-1'>
					<p class=" flex justify-center items-center" >Adresse de facturation</p>
					<div class="border-double border-8 px-10 pb-5">
						{{ form_row(form.billAddress, {
                    	attr: { value: user.address }
                	})}}
						{{ form_row(form.billZipCode) }}
						{{ form_row(form.billCity, {
                    	attr: { value: user.city }
                	})}}
					</div>
				</div>
						{# {{ form_row(form.paymentDate) }} #}
						{{ form_row(form.payMethod) }}
			</div>
					<button class='inline-flex justify-center items-center w-full px-4 py-2 mt-4 bg-green-800 border border-transparent rounded-md font-semibold text-sm text-white uppercase tracking-widest hover:bg-green-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300 disabled:opacity-25 transition ease-in-out duration-150'>{{ button_label|default('Comfirm') }}</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

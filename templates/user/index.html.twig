{% extends 'admin.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}


	<div class="py-12 col-span-4 self-center">
		<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
			<div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
				<div class="p-6 bg-white border-b border-gray-200">
					<a class="flex justify-center items-center px-2 py-2 bg-blue-700 border border-transparent rounded-md font-semibold text-sm text-white uppercase tracking-widest hover:bg-blue-600 active:bg-blue-700 focus:outline-none focus:border-gray-100 focus:ring ring-gray-100 disabled:opacity-25 transition ease-in-out duration-150 w-fit" href="{{ path('app_register') }}">Create new user</a>
				</div>
			</div>
			<div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
				<div class="flex flex-col">
					<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
							<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
								<table class="min-w-full divide-y divide-gray-200">
									<thead class="bg-gray-50">
										<tr>

											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">name</th>
											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">email</th>
											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">phone</th>
											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">coefficient</th>
											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">private</th>
											<th scope="col" class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
											<th scope="col" class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">actions</th>
										</tr>
									</thead>
									<tbody>
										{% for user in users %}
											<tr>

												<td class="px-2 py-2">{{ user.firstname }}
													{{user.lastname}}</td>
												<td class="px-2 py-2">{{ user.email }}</td>
												<td class="px-2 py-2">{{ user.phone }}</td>
												<td class="px-2 py-2">{{ user.coef }}</td>
												<td class="px-2 py-2">{{ user.private ? "yes" : user.private is null ? "null" : "no" }}</td>
												<td class="px-2 py-2">
													{% for role in user.roles %}
														<span>{{role}}</span><br>
													{% endfor %}
												</td>
												<td class="flex justify-around px-2 py-2 whitespace-nowrap text-right text-sm font-medium">
													<a class="text-indigo-600 hover:text-indigo-900 uppercase" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="11">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}

<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
	<button class=" {{ "edit" in currentPath ? "px-4 py-2" : "text-red-700" }}  w-full justify-center items-center border border-transparent rounded-md font-semibold text-sm uppercase transition ease-in-out duration-150">Delete</button>
</form>


